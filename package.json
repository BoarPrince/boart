{
  "name": "boart",
  "version": "1.0.0",
  "private": "true",
  "workspaces": [
    "./packages/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "jest --coverage",
    "compile": "npm run compile -ws",
