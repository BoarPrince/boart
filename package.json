{
  "name": "boart",
  "author": "kem@boarprince.net",
  "version": "1.0.0-1",
  "private": "true",
  "workspaces": [
    "./src/packages/core",
    "./src/packages/core-impl",
    "./src/packages/execution",
    "./src/packages/protocol",
    "./src/packages/basic",
    "./src/packages/description"
  ],
  "engineStrict": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "tsc:help": "tsc --help",
    "test": "jest --coverage",
    "compile:all": "tsc -p tsconfig.json && ts-node build.ts -a cnm -p core core-impl execution protocol basic description && ts-node build.ts -a crnm -p protocol -f src/protocol/protocol-template.html",
    "compile": "npm run compile -ws",
    "compile:core": "npm run compile -w @boart/core",
    "compile:doc": "npm run compile -w @boart/description && ts-node build.ts -a cnm -p description && ts-node build.ts -a crnm -p description -f resources/ && cd src/gauge && npm run test:local:doc",
    "compile:core-impl": "npm run compile -w @boart/core-impl",
    "compile:protocol": "npm run compile -w @boart/protocol",
    "compile:execution": "npm run compile -w @boart/execution",
    "compile:basic": "npm run compile -w @boart/basic",
    "parser:generate-value": "peggy src/packages/core/src/parser/peggy/boart-parser.pegjs --output src/packages/core/src/parser/peggy/ParserValue.js --start-rule START_VALUE",
    "parser:generate-variable": "peggy src/packages/core/src/parser/peggy/boart-parser.pegjs --output src/packages/core/src/parser/peggy/ParserVariable.js --start-rule START_VARIABLE",
    "parser:generate-action": "peggy src/packages/core/src/parser/peggy/boart-parser.pegjs --output src/packages/core/src/parser/peggy/ParserAction.js --start-rule START_ACTION",
    "parser:generate": "npm-run-all parser:generate-*",
    "parser": "ts-node src/packages/core/src/parser/run.ts",
    "clean:execution": "echo hallo",
    "format-all": "prettier --write 'src/packages/**/src/**/*.{ts,js,json}'",
    "lint": "eslint src/packages --ext .ts",
    "lint:fix": "eslint src/packages --ext .ts --fix",
    "prepublish": "npm version prerelease -ws",
    "publish": "npm publish -ws",
    "publish:core": "npm version prerelease -w @boart/core && npm publish -w @boart/core",
    "publish:execution": "npm version prerelease -w @boart/execution && npm publish -w @boart/execution",
    "publish:start-server": "sinopia",
    "compile:and:publish": "npm run compile && npm install && npm run publish",
    "call": "ts-node src/build.ts -p core",
    "call:core": "npm run call -w @boart/core",
    "git:open": "open https://github.com/Kemark/boart"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^18.8.2",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^4.4.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "peggy": "^3.0.2",
    "prettier": ">=2.0.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "yargs": "^17.5.1"
  }
}