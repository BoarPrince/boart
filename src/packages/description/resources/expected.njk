{% extends "main.njk" %}

{% block title %}Expected Documentation{% endblock %}

{# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
{# right / sub navigatio #}
{# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
{% block subnav %}
  {{ createSubnav(operators | onlyParents) }}
{% endblock %}

{# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
{# main are #}
{# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
{% block main %}
  <h1> Expected Operator </h1>

  {% for operator in operators | onlyParents | sort(attribute='title')%}
    {############################ Operator ############################}
    <h2 id="{{ operator.id }}">{{operator.title}}</h2>
    {{operator.description | markdown}}
    {########################## End Operator ##########################}

    {############################ Examples ############################}
    {% for example in operator.examples %}
      <h4>{{example.title}}</h4>
      <div class="example">
        {{example.example | markdown}}
      </div>
      {########################## End Examples ##########################}
    {% endfor %}
  {% endfor %}
{% endblock %}
