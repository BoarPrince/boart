<!DOCTYPE html>
<html lang="en">
  <head>
    {# Required meta tags #}
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"/>

    {# Bootstrap Icons #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">

    <!-- <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet" /> -->
    <link rel="stylesheet" href="styles.css"/>

    <style>
      :root {
        --bs-primary-rgb: 249, 200, 0;
        --bs-link-color: rgb(189, 28, 31);
        --bs-secondary-rgb: rgb(189, 28, 31);
        --bs-link-hover-color: rgb(232, 37, 29);
      }
    </style>

    <title>
      {% block title %}{% endblock %}
    </title>
  </head>
  <body>
    {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
    {# right / sub nav macro #}
    {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
    {% macro createSubnav(parentDocs, child = false) %}
      {% if not child %}
        {% set parentClass = "tree" %}
      {% else %}
        {% set parentClass = "" %}
      {% endif %}

      <ul class="{{parentClass}}">
        {% for operator in parentDocs | sort(attribute='title')%}
          <li>
            {# <details open>
              <summary> #}
            <a href="{{operator | brtRef}}">
              {{operator.title}}
            </a>
            {# </summary> #}
            {% if operator | brtChilds %}
              {{ createSubnav(operator | brtChilds, true) }}
            {% endif %}
            {# </details> #}
          </li>
        {% endfor %}
      </ul>
    {% endmacro %}

    {% macro createSubnav2(parentDocs, child = false) %}
      {% for operator in parentDocs | sort(attribute='title')%}
        {% if child %}
          {% set navClass = "ms-3" %}
          {% set childIcon = '<i class="bi bi-chevron-right"></i>' %}
        {% else %}
          {% set navClass = "" %}
          {% set childIcon = "" %}
        {% endif %}

        <div class="{{navClass}} text-nowrap">
          <a class="nav-link" href="{{operator | brtRef}}">
            {{childIcon}}
            {{operator.title}}
          </a>
          {% if operator | brtChilds %}
            {{ createSubnav(operator | brtChilds, true) }}
          {% endif %}
        </div>
      {% endfor %}
    {% endmacro %}

    {% macro createSubnav1(parentDocs, child = false) %}
      {% if not child %}
        <div class="sub-menu">
        {% endif %}
        <ul>
          {% for operator in parentDocs | sort(attribute='title')%}
            <li>
              <a class="nav-link" href="{{operator | brtRef}}">
                {{operator.title}}
              </a>
              {% if operator | brtChilds %}
                {{ createSubnav(operator | brtChilds, true) }}
              {% endif %}
            </li>
          {% endfor %}
        </ul>
        {% if not child %}
        </div>
      {% endif %}
    {% endmacro %}

    <header class="container-fluid">
      {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
      {# left and right navigation #}
      {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
      <div class="row">
        {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
        {#  L E F T  #}
        {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
        <nav class="fixed-top col-2 pe-5 vh-100 mt-5 bg-primary">
          <div class="nav flex-column mt-2">
            <a class="nav-link active" aria-current="page" href="#">Expected</a>
            <a class="nav-link" href="#">Link</a>
            <a class="nav-link" href="#">Link</a>
            <a class="nav-link disabled">Disabled</a>
          </div>
        </nav>

        {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
        {#  R I G H T  #}
        {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
        <nav id="nav-sub-menu" class="fixed-top offset-10 col-2 vh-100 mt-5 bg-primary" style="font-size: smaller !important">
          <div class="nav flex-column mt-2">
            {% block subnav %}{% endblock %}
          </div>
        </nav>
      </div>

      {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
      {# top navigation #}
      {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
      <nav class="fixed-top">
        <div id="nav-top" class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button
                        class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation"
                    >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="#">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Link</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>

    {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
    {# main are #}
    {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
    <main class="container-fluid mt-5 pt-4" data-bs-spy="scroll" data-bs-target="#nav-sub-menu">
      <div class="row">
        <div class="offset-2 col-8">
          {% block main %}{% endblock %}
        </div>
      </div>
    </main>

    <script src="table-examples.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>