<!DOCTYPE html>
<html lang="en">
  <head>
    {# Required meta tags #}
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"/>

    {# Bootstrap Icons #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">

    <!-- <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet" /> -->
    <link rel="stylesheet" href="styles.css"/>

    <title>
      {% block title %}{% endblock %}
    </title>
  </head>
  <body>
    <header class="fixed-top container-fluid">
      {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
      {# top navigation #}
      {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
      <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Navbar</a>
          <button
                        class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation"
                    >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Link</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
      {# left and right navigation #}
      {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
      <div class="row">
        {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
        {# left navigation #}
        {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
        <div class="col-2 pe-5">
          <nav class="nav flex-column bg-light vh-100">
            <a class="nav-link active" aria-current="page" href="#">Expected</a>
            <a class="nav-link" href="#">Link</a>
            <a class="nav-link" href="#">Link</a>
            <a class="nav-link disabled">Disabled</a>
          </nav>
        </div>

        {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
        {# right / sub nav macro #}
        {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
        {% macro createSubnav(parentDocs, child = false) %}
          {% for operator in parentDocs | sort(attribute='title')%}
            {% if child %}
              {% set navClass = "ms-3" %}
              {% set childIcon = '<i class="bi bi-chevron-right"></i>' %}
            {% else %}
              {% set navClass = "bg-info bg-opacity-10" %}
              {% set childIcon = "" %}
            {% endif %}

            <div class="{{navClass}}">
              <a class="nav-link" href="#">
                {{childIcon}}
                {{operator.title}}
              </a>
              {% if operator | childs %}
                {{ createSubnav(operator | childs, true) }}
              {% endif %}
            </div>
          {% endfor %}
        {% endmacro %}

        {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
        {# right / sub navigation #}
        {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
        <div class="offset-7 col-3 bg-light vh-100 lh-1 fs-6" style="font-size: smaller !important">
          <nav class="nav flex-column">
            {% block subnav %}{% endblock %}
          </nav>
        </div>
      </div>
    </header>

    {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
    {# main are #}
    {# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #}
    <main class="container-fluid mt-5 pt-4">
      <div class="offset-2 col-7">
        {% block main %}{% endblock %}
      </div>
    </main>

    <script src="table-examples.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
