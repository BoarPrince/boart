{
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "include": [
    "**/src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": false,
    "strictNullChecks": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "outDir": "dist",
    "rootDir": ".",
    "rootDirs": [
      "src/packages/core/src/",
      "src/packages/core-impl/src/",
      "src/packages/execution/src/",
      "src/packages/protocol/src/",
      "src/packages/basic/src/"
    ],
    "baseUrl": "src/packages/",
    "paths": {
      "@boart/core": [
        "core/src/index.ts"
      ],
      "@boart/core-impl": [
        "core-impl/src/index.ts"
      ],
      "@boart/execution": [
        "execution/src/index.ts"
      ],
      "@boart/protocol": [
        "protocol/src/index.ts"
      ],
      "@boart/basic": [
        "basic/src/index.ts"
      ]
    }
  }
}
