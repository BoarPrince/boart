{
  "exclude": [
    "**/*.test.ts",
    "node_modules",
    "dist"
  ],
  "files": [
    "global.ts"
  ],
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": false,
    "strictNullChecks": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "declaration": true,
    "paths": {
      "@boart/*": [
        "./packages/*/"
      ]
    }
  }
}
