{
  "exclude": [
    "**/*.test.ts",
    "node_modules",
    "dist"
  ],
  "paths": {
    "@boart/core": [
      "./src/packages/core/src/index.ts"
    ],
    "@boart/core-impl": [
      "./src/packages/core-impl/src/index.ts"
    ],
    "@boart/execution": [
      "./src/packages/execution/src/index.ts"
    ],
    "@boart/protocol": [
      "./src/packages/protocol/src/index.ts"
    ],
    "@boart/basic": [
      "./src/packages/basic/src/index.ts"
    ]
  },
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": false,
    "strictNullChecks": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declaration": true,
    "composite": true,
    "rootDir": "src"
  }
}
