{
  "include": [
    "./src/packages/**/*.ts"
  ],
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "experimentalDecorators": true,
    "declaration": true,
    "baseUrl": "src/packages/",
    "paths": {
      "@boart/core": [
        "core/src/index.ts"
      ],
      "@boart/core-impl": [
        "core-impl/src/index.ts"
      ],
      "@boart/execution": [
        "execution/src/index.ts"
      ],
      "@boart/protocol": [
        "protocol/src/index.ts"
      ],
      "@boart/basic": [
        "basic/src/index.ts"
      ]
    }
  }
}
